<view class="container" style="background: #566cf3 url('{{cssImg.bg}}') no-repeat; background-size: 100% auto;">
  <view class="repairArea" wx:if="{{rows.length !== 0}}">
    <view class="info" wx:key="idx" wx:for="{{rows}}" wx:for-index="idx" wx:for-item="item">
      <view class="msg">
        <view class="title">{{item.ReportTime}}</view>
        <view class="des">{{item.RegionName}}区域 {{item.ReportContent}}</view>
      </view>
      <view class="btn">
        <button wx:if="{{item.IsNeedClose === true}}" hover-class="hoverStyle" bindtap="closeOrder" data-order-index="{{idx}}" data-sheet-id="{{item.WorkSheetId}}">关闭工单</button>
        <button wx:if="{{item.IsNeedClose === false}}" class="disable" hover-class="hoverStyle">成功关闭</button>
      </view>
    </view>
